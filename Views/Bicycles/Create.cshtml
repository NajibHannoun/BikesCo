@model BikesTest.Models.Bicycle

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bicycle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Create">
			@Html.AntiForgeryToken()
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="size" class="control-label"></label>
				<select asp-for="size" class="form-control">
					<option value="S">S</option>
					<option value="M">M</option>
					<option value="L">L</option>
					<option value="XL">XL</option>
				</select>
				<span asp-validation-for="size" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="aquisutionDate" class="control-label"></label>
				<input asp-for="aquisutionDate" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" class="form-control" />
				<span asp-validation-for="aquisutionDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="purchasePrice" class="control-label"></label>
				<input asp-for="purchasePrice" type="number" min="0" class="form-control" />
				<span asp-validation-for="purchasePrice" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="leassPrice" class="control-label"></label>
				<input asp-for="leassPrice" type="number" min="0" class="form-control" />
				<span asp-validation-for="leassPrice" class="text-danger"></span>
			</div>
			<div class="form-group">
				<a asp-action="Index"><input type="submit" value="Create" class="btn btn-primary" /></a>
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
